<div class="row s12 m4 l8">
    <%= form_for link do |f| %>
    <%= f.hidden_field :user_id, value: link_owner %>
    <div class="input-field">
      <%= f.text_field :full_url, pattern: "(https?://)?([a-z0-9]+\\.)?[a-z0-9\\-]+\\.[a-z]+.+[^\\W\\_]", required: true %>
      <%= f.text_field :short_url %>
    </div>
    <div class="row">
      <%= f.submit "Make Shortr ",
class: "btn waves-effect waves-light btn-medium brand-bg white-text regular-text" %>
    </div>
  <% end %>
</div>
