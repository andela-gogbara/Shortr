<div class="row s12 m4 l8">
    <%= form_for link do |f| %>
    <%= f.hidden_field :user_id, value: link_owner %>
    <div class="input-field">
      <%= f.text_field :full_url, pattern: "(https?://)?([a-z0-9]+\\.)?[a-z0-9\\-]+\\.[a-z]+.+[^\\W\\_]", required: true %>
      <%= f.text_field :short_url, required: true %>
      <div class="row activity">
        <%= f.radio_button :active, true, id: "true" %>
        <%= f.label :active, "Active", for: "true", class: "active-text" %>
        <%= f.radio_button :active,  false, id: "false" %>
        <%= f.label :active, "Inactive", for: "false", class: "inactive-text" %><br /><br />
      </div>
    </div>
    <div class="row">
      <%= f.submit "Save Changes",
class: "btn waves-effect waves-light btn-medium brand-bg white-text regular-text" %>
    </div>
  <% end %>
</div>
