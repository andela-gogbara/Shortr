<div class="navbar-fixed">
<nav>
  <div class="nav-wrapper header">
    <div class="logo">
      <a href="<%= root_path %>">
        <%= image_tag("shortr-logo.png")%>
      </a>

    </div>
    <div class="menu-items">
      <ul class="right">
        <% if current_user && request.path == "/" %>
        <li><%= link_to "Dashboard", user_path(current_user) %></li>
        <li><%= link_to "Logout", logout_path %></li>
        <% elsif current_user %>
        <li><%= link_to "API KEY", api_key_path, remote: true, class: "btn waves-effect waves-light btn-medium brand-bg white-text regular-text waves-input-wrapper" %></li>
        <li><%= link_to "Create Shortr", "#{links_path}/new", remote:true, class: "btn waves-effect waves-light btn-medium brand-bg white-text regular-text waves-input-wrapper" %></li>
        <li><%= link_to "Logout", logout_path %></li>
        <% else %>
        <li><%= link_to "Sign In", login_path, class: "btn-medium" %></li>
        <li><%= link_to "Sign Up", signup_path, class: "btn-medium" %></li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>
</div>
